
<%- include("partials/header"); -%>

<h1>Home</h1>

<p><%= homeStarter %></p>

<% postsText.forEach(function(element){ %>
        <h1><%= element.titleContent %></h1>
       <% if(element.textContent.length>100){ %>    
            <p><%= element.textContent.substring(0,100) %>...<a href="/post/<%= element.titleContent %>">readmore</a></p>   
      <%}%>  
      <% if(element.textContent.length<=100){ %>    
        <p><%= element.textContent %></p>   
      <%}%> 
<% }); %>

<%- include("partials/footer"); -%>
